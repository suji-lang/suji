import std:println

fib = |n| {
    match n {
        0 | 1 => n,
        _ => fib(n-1) + fib(n-2),
    }
}

first_n_fibs = |n| {
    numbers = (0..n)
                ::map(|f| fib <| f)
                ::join(", ")

    "The first ${n} Fibonacci numbers are: ${numbers}" |> println
}

first_n_fibs <| 10
